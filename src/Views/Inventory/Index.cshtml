@model IEnumerable<HealthCareChallenge.Models.MedicationInventory>

@{
    ViewData["Title"] = "Medication Inventory";
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Medication Inventory</h1>
        <div class="d-flex gap-2">
            <form asp-action="Reset" method="post">
                <button type="submit" class="btn btn-warning">Reset Inventory to 10</button>
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Drug Name</th>
                <th>Quantity In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DrugName</td>
                    <td>@item.QuantityInStock</td>
                </tr>
            }
        </tbody>
    </table>
    
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Patient List</a>
    </div>
</div>


