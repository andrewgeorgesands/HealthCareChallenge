@model IEnumerable<HealthCareChallenge.Models.DispensedMedication>

@{
    ViewData["Title"] = "Dispensed Medication History";
    var patients = ViewBag.Patients as Dictionary<int, string>;
    var inventory = ViewBag.Inventory as Dictionary<int, string>;
}

<div class="container mt-4">
    <h2>Dispensed Medication History</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">No medications have been dispensed yet.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Date/Time (UTC)</th>
                    <th>Patient</th>
                    <th>Medication</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DispensedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@(patients?.ContainsKey(item.PatientId) == true ? patients[item.PatientId] : "Unknown Patient")</td>
                        <td>@(inventory?.ContainsKey(item.InventoryId) == true ? inventory[item.InventoryId] : "Unknown Medication")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Patient List</a>
    </div>
</div>

